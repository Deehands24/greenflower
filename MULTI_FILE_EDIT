// components/ui/dialog.tsx
import { cn } from "@/lib/utils"
import { DialogProps } from "@radix-ui/react-dialog"
import { motion } from "framer-motion"
import { forwardRef } from "react"
import { DialogContent } from "@radix-ui/react-dialog"

const Dialog = forwardRef<HTMLDivElement, DialogProps>((props, ref) => {
  return (
    <motion.div
      ref={ref}
      className="fixed inset-0 bg-background/80 backdrop-blur-sm"
      {...props}
    />
  )
})

Dialog.displayName = "Dialog"

const DialogContent = forwardRef<HTMLDivElement, DialogProps>((props, ref) => {
  return (
    <DialogContent
      ref={ref}
      className={cn(
        "fixed left-[50%] top-[30%] z-50 grid w-full max-w-lg translate-x-[-50%] translate-y-[-50%] gap-4 border bg-background p-6 shadow-lg duration-200 data-[state=open]:animate-in data-[state=closed]:animate-out data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0 data-[state=closed]:zoom-out-95 data-[state=open]:zoom-in-95 data-[state=closed]:slide-out-to-left-1/2 data-[state=closed]:slide-out-to-top-[48%] data-[state=open]:slide-in-from-left-1/2 data-[state=open]:slide-in-from-top-[48%] sm:rounded-lg max-h-[85vh] overflow-y-auto",
        props.className
      )}
      {...props}
    />
  )
})

DialogContent.displayName = "DialogContent"

export { Dialog, DialogContent }

